<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="CustomConsoles\CursorConsole.cs" />
    <Compile Remove="CustomConsoles\FadeConsole.cs" />
    <Compile Remove="CustomConsoles\MouseRenderingDebug.cs" />
    <Compile Remove="CustomConsoles\SceneProjectionConsole.cs" />
    <Compile Remove="CustomConsoles\SerializationTests.cs" />
    <Compile Remove="CustomConsoles\SubConsoleCursor.cs" />
    <Compile Remove="CustomConsoles\TextCursorConsole.cs" />
    <Compile Remove="CustomConsoles\ViewsAndSubViews.cs" />
    <Compile Remove="CustomConsoles\WorldGenerationConsole.cs" />
  </ItemGroup>

  <PropertyGroup>
    <GameHost>sfml</GameHost>
    <UseProjectReferences>true</UseProjectReferences>

    <DefineConstants Condition=" '$(GameHost)' == 'sfml' ">$(DefineConstants);SFML</DefineConstants>
    <DefineConstants Condition=" '$(GameHost)' == 'monogame' ">$(DefineConstants);MONOGAME</DefineConstants>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup Condition=" '$(GameHost)' == 'monogame' ">
    <ProjectReference Condition=" '$(UseProjectReferences)' == 'true' " Include="..\..\SadConsole.Host.MonoGame\SadConsole.Host.MonoGame.csproj" />
    <PackageReference Condition=" '$(UseProjectReferences)' != 'true' " Include="SadConsole.Host.MonoGame" Version="9.0.0-alpha6" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(GameHost)' == 'sfml' ">
    <ProjectReference Condition=" '$(UseProjectReferences)' == 'true' " Include="..\..\SadConsole.Host.SFML\SadConsole.Host.SFML.csproj" />
    <PackageReference Condition=" '$(UseProjectReferences)' != 'true' " Include="SadConsole.Host.SFML" Version="9.0.0-alpha6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Condition=" '$(UseProjectReferences)' == 'true' " Include="..\..\SadConsole\SadConsole.csproj" />
    <PackageReference Condition=" '$(UseProjectReferences)' != 'true' " Include="SadConsole" Version="9.0.0-alpha6" />
  </ItemGroup>

  <ItemGroup>
    <Folder Condition=" '$(GameHost)' == 'sfml' " Include="HostSpecific\SFML\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Ansi\files.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\QS-SIERR.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-BTC1.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-CCU3.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-DGZN.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\Dawnlike2.atlas">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\Dawnlike2.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\font.fnt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\font.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\C64.font">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Fonts\Yayo_c64.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Res\Images\sad.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
